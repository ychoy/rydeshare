<div class= "ui container">
  <h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
  <div class="ui form">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="two fields">
        <div class="required field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true %>
        </div>

        <div class="required field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true %>
        </div>
      </div>
      <div class="two fields">
        <div class="required field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :phone_number %> <br />
          <%= f.text_field :phone_number, autofocus: true  %>
        </div>
      </div>

      <div class="required field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>


      <div class="actions">
        <%= f.submit "Update", class: "ui button" %>
      </div>
      <% end %>

      <div class="ui divider"></div><br/>
      <h2>Cancel Account</h2>
      <p>Would you like to cancel your account? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui button" %></p>

      <%= fa_icon "caret-left" %> <%= link_to "Back", :back %>
  </div>
</div>
